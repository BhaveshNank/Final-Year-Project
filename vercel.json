{
  "version": 2,
  "builds": [
    {
      "src": "./app.py",
      "use": "@vercel/python"
    },
    {
      "src": "website-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/chat",
      "dest": "/app.py"
    },
    {
      "src": "/health",
      "dest": "/app.py"
    },
    {
      "src": "/test",
      "dest": "/app.py"
    },
    {
      "src": "/products/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/images/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/debug-(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/reset-session",
      "dest": "/app.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/website-ui/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg))",
      "dest": "/website-ui/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/website-ui/index.html"
    }
  ]
}