{
  "version": 2,
  "builds": [
    {
      "src": "./app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/chat",
      "dest": "/app.py"
    },
    {
      "src": "/health",
      "dest": "/app.py"
    },
    {
      "src": "/test",
      "dest": "/app.py"
    },
    {
      "src": "/products/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/images/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/debug-(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/reset-session",
      "dest": "/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "./",
    "FLASK_ENV": "production"
  }
}